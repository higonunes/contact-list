<div class="row ">
  <div class="col-xs-12 text-center ">
    <h1>Meus contatos</h1>
    <h1><%= link_to "Novo Contato", new_contato_path, class: "btn btn-success text-center" %> </h1>
  </div>

  <div class="col-md-8 col-md-offset-2 col-xs-12 ">

    <table class="table table-striped ">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Telefone</th>
        <th colspan="2">
          Ações
        </th>
      </tr>
      </thead>

      <tbody>
        <% if @contatos.empty? %>
        <td colspan="4" class="text-center">
          <h3>Sem contatos cadastrados </h3>
        </td>
        <% end %>

        <% @contatos.each do |contato| %>
        <tr>
          <td class="mx-auto"><%= contato.nome %></td>
          <td><%= contato.telefone %></td>
          <td><%= link_to 'Show', contato, class: "btn btn-default"%></td>
          <td><%= link_to 'Edit', edit_contato_path(contato), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>

</div>
